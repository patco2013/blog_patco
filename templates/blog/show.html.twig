{% extends 'base.html.twig' %}

{% block body %}

        <article>
            <h2>{{ article.title }}</h2>
            <div class="metadata">
                Ecrit le {{ article.createdAt | date('d/m/Y') }} à {{ article.createdAt | date('H:i') }} dans la catégorie marketing
            </div>
            <div class="content">
                <img src="http//placehold.it/350x150" alt="">
                {{ article.content | raw }}
            </div>
        </article>
    
        <button type="submit" class="btn btn-primary"><a class="nav-link" href="{{ path('blog_create',{'id': article.id} ) }}">Modifier l'article</a>

{% endblock %}