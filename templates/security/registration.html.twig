{% extends 'base.html.twig' %}

{% block body %}
    <h1>Inscription</h1>

    {{ form_start(formRegistration) }}

        {{ form_row(formRegistration.username, {'label' : 'Nom d\'utilisateur', 'attr' : {'placeholder' : 'Nom d\'utilisateur'}}) }}
        {{ form_row(formRegistration.email, {'label' : 'E-mail', 'attr' : {'placeholder' : 'E-mail'}}) }}
        {{ form_row(formRegistration.password, {'label' : 'Mot de passe', 'attr' : {'placeholder' : 'Mot de passe'}}) }}
        {{ form_row(formRegistration.confirm_password, {'label' : 'Confirmation du mot de passe', 'attr' : {'placeholder' : 'Confirmation du mot de passe'}}) }}

        <button type="submit" class="btn btn-success">Inscription</button>

    {{ form_end(formRegistration) }}

{% endblock %}